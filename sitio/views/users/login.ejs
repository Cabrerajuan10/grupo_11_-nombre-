<!DOCTYPE html>
<html lang="es">

<!-- head -->
<%-include('../partials/head',{title: 'Login'}) %>

<body class="login">

    <!-- header -->
  <%-include('../partials/header') %>
<div class="login-container"></div>
  <img class="wave" src="/images/login/wave-naranja.png">
	<div class="container">
		<div class="img-login">
			<img src="/images/home/Logo C-E.png">
		</div>
		<div class="login-content">
			<form id="form" action="" method="POST" autocomplete="off" novalidate>
				<img  src="/images/users/avatar-login.png">
				<h2 class="title">Bienvenid@</h2>
           		<div class="input-div one">
           		   <div class="i">
           		   		<i class="fas fa-user"></i>
           		   </div>
					  
           		   <div class="div box-email">
           		   		<h5>Email</h5>
           		   		<input type="email" class="input" name="email" id="email">
						<span id="error-email" class="small text-danger"></span>
                        <span id="info-email" class="small text-info"></span>
           		   </div>
           		</div>
           		<div class="input-div pass">
           		   <div class="i"> 
           		    	<i class="fas fa-lock"></i>
           		   </div>
           		   <div class="div wrapper">
           		    	<h5>Contrase√±a</h5>
           		    	<input type="password" class="input pass" name="password" id="input-password">
						<span class="show-btn"><i id="watch" class="fas fa-eye"></i></span>
						<span id="error-password" class="small text-danger"></span>
				        <span id="info-password" class="small text-info"></span>
            	   </div>
				  
            	</div>

                <!-- recuerdame -->
                <div class="box-check">
					<label class="remember" for="remember">Recuerdame</label>
					<input class="inp-remember" type="checkbox" id="remember" name="remember">
				  </div>
  
				  <!-- errors -->
				  
				  <span class="text-danger"><%= locals.errores && errores.email ? errores.email.msg : null %></span>

				  <div class="box-form">
					<span id="error-empty" class="small text-danger"></span>
				</div>

            	<a class="crear-cuenta" href="/users/register">Crear cuenta</a>
            	<input type="submit" class="btn" value="Login">
            </form>
        </div>
    </div>
  



<!--SCRIPTS-->
  <%-include('../partials/scripts')%> 
  
</body>

</html>