<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head',{title : 'Mi perfil'}) %> 

<body class="bg-light">
  <%- include('../partials/header') %> 

    <main class="container">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-8 mt-5 mx-auto">
                <div class="card">
                    <div class="card-header text-light bg-dark">
                        <h4>Perfil de usuario</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 col-md-4">
                                <img class="img-fluid rounded-start" src="/images/users/<%= user.avatar %> "  alt="">
                            </div>
                            <div class="col-12 col-md-8">
                                <form id="form-profile" class="row" method="POST" enctype="multipart/form-data" novalidate autocomplete="off">
                                    <div class="col-12 mb-3">
                                        <div class="form-floating ">
                                            <input type="text" id="input-name"class="form-control <%= locals.errors && errors.name ? 'is-invalid' : null %>"  placeholder="Nombre " name="name" value="<%= user.name %>">
                                            <label for="input-name">Nombre</label>
                                            <span id="error-name" class="small text-danger"><%= locals.errores && errores.name ? errores.name.msg : null %> </span>
                                            <span id="info-name" class="small text-info"></span>
                                          </div>
                                          <span class="text-danger small ms-2"><%= locals.errors && errors.name ? errors.name.msg : null%> </span>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <div class="form-floating ">
                                            <input type="text" class="form-control" id="email" placeholder="Email" name="email" value="<%= user.email %>" disabled>
                                            <label for="email">Email</label>
                                          </div>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <div class="form-floating ">
                                            <input type="password" class="form-control" id="input-password" placeholder="Contraseña" name="password" >
                                            <label for="email">Cambiar contraseña</label>
                                            <span id="error-password" class="small text-danger"></span>
				                            <span id="info-password" class="small text-info"></span>
                                          </div>
                                          <span class="text-danger small ms-2"><%= locals.errors && errors.password ? errors.password.msg : null%> </span>

                                    </div>
                                   <div class="col-12 col-md-6">
                                    <div class="mb-3">
                                        <label for="avatar" class="btn btn-outline-secondary w-100 mt-2">Subir imagen de perfil</label>
                                        <input hidden class="form-control" type="file" id="avatar" name="avatar">
                                      </div>
                                   </div>

                                   <!--errors-->
                                   

                                    <div class="col-12 mt-5">
                                        <button type="submit" class="btn btn-outline-dark w-100">Guardar cambios</button>
                                    </div>

                                    <div class="box-form">
                                        <span id="error-empty" class="small text-danger"></span>
                                     </div>
                              </form>
                            </div>
                        </div>
                        
                    </div>
                   
                </div>
            </div>
           
        </div>
    </main>

    <%-include('../partials/scripts')%> 


    <script src="/javascripts/profileValidator.js"></script>
</body>
</html>