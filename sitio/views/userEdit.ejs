
<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head',{title : 'Editar usuario'}) %> 

<body class="bg-light">
  <%- include('./partials/header') %> 

    <main class="container">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-8 mt-5 mx-auto">
                <div class="card">
                    <div class="card-header text-light bg-dark">
                        <h4>Editar usuario</h4>
                    </div>
                    <div class="card-body">
                        <form action="/users/userUpdate/<%= user.id %>?_method=PUT" class="row" method="POST" enctype="multipart/form-data">
                                <div class="col-9 mb-3">
                                    <div class="form-floating ">
                                        <input type="text" class="form-control <%= locals.errors && errors.name ? 'is-invalid' : null %>" id="name" placeholder="Nombre del usuario" name="name" value="<%= user.name %>">
                                        <label for="name">Nombre del usuario</label>
                                      </div>
                                      <span class="text-danger small ms-2"><%= locals.errors && errors.name ? errors.name.msg : null%> </span>
                                </div>
                            
                                <div class="col-12 mb-3">
                                    <div class="form-floating ">
                                        <input type="email" style="resize: none; height: 100px;" class="form-control" placeholder="Ingresar email" id="floatingTextarea" name="email" value="<%= user.email %>">
                                        <label for="floatingTextarea">Email</label>
                                      </div>
                                      <span class="text-danger small ms-2"><%= locals.errors && errors.email ? errors.email.msg : null%> </span>

                                </div>
                               <div class="col-12 col-md-6 mb-3">
                                <div class="form-floating ">
                                    <input type="password" class="form-control <%= locals.errors && errors.password ? 'is-invalid' : null %>" id="password" name="password" value=<%= user.password %>>
                                    <label for="password">Contrase√±a</label>
                                  </div>
                                  <span class="text-danger small ms-2"><%= locals.errors && errors.password ? errors.password.msg : null%> </span>

                                  
                                  <div class="col-12 col-md-6 mb-3">
                                    <div class="form-floating">
                                        <select class="form-select <%= locals.errors && errors.rolId ? 'is-invalid' : null %>" id="rolId" aria-label="Floating label select example" name="rolId">
                                          <option value="<%= rols.id %>" selected hidden>Selecciona el rol de usuario</option>
                                          <% rols.forEach(rol => { %>
                                           <option value="<%= rol.id %>" <%= locals.old && old.users.rolId === rol.name  ? 'selected' : null%> ><%= rol.name %></option>
                                          <% }) %>
                                        </select>
                                        <label for="rol">Roles</label>
                                      </div>
                                      <span class="text-danger small ms-2"><%= locals.errors && errors.rolId ? errors.rolId.msg : null%> </span>
    
                                   </div>

                               </div>
                             
                               <div class="col-12 col-md-6">
                                <div class="mb-3">
                                    <label for="avatar" class="btn btn-outline-secondary w-100 mt-2">Subir imagen</label>
                                    <input hidden class="form-control" type="file" id="avatar" name="avatar">
                                  </div>
                               </div>
                                <div class="col-12 mt-5">
                                    <button type="submit" class="btn btn-outline-dark w-100">Guardar</button>
                                </div>
                          </form>
                    </div>
                   
                </div>
            </div>
           
        </div>
    </main>

    <%- include('./partials/scripts') %> 

</body>
</html>