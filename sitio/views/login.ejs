<!DOCTYPE html>
<html lang="es">

<!-- head -->
<%-include('./partials/head') %>

<body class="login">

    <!-- header -->
  <%-include('./partials/header') %>

    <main>
        <div class="box-contain">
            <h4>¡HOLA! PARA SEGUIR, INGRESÁ TU E-MAIL O USUARIO.</h4>

            <form action="">

                <!-- email-usuario -->
                <div class="container-input">
                    <p>E-mail o nombre de usuario</p>
                    <input class="text" type="email" name="mail">
                </div>

                <!-- contraseña -->
                <div class="container-input">
                    <p>Contraseña</p>
                    <input class="text" type="password" name="pass" minlength="8">
                </div>

                <!-- Botones -->
                <div class="box-button">
                    <button class="btn-registro" type="submit">Registrate</button>
                    <button class="btn-ingresar" type="submit">Iniciar sesión</button>
                </div>

            </form>
        </div>
        <div class=box-carrousel>
            <section class="banner">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img class="d-block w-100" src="/img/home/img-banner-mobile.webp" alt="First slide">
                    </div>
                    <div class="carousel-item">
                      <img class="d-block w-100" src="/img/home/img2-banner-mobile.webp" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                      <img class="d-block w-100" src="/img/home/img3-banner-mobile.webp" alt="Third slide">
                    </div>
                  </div>
                  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
              </section>
        </div>
        
    </main>

    <!--footer-->
  <%-include('./partials/footer') %>

